<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/incomeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Your Income"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/tvExpense1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Enter Expense based on category" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/exepensename1"
        android:hint="Expense Category 1 (eg.,Food)"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Amount for category 1"
        android:inputType="numberDecimal"/>


